%body{'data-offset' => '50', 'data-spy' => 'scroll', 'data-target' => '.navbar-collapse'}
  = stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Roboto:400,300,500'
  = javascript_include_tag 'application.js'
  .preloader
    .sk-spinner.sk-spinner-circle
      .sk-circle1.sk-circle
      .sk-circle2.sk-circle
      .sk-circle3.sk-circle
      .sk-circle4.sk-circle
      .sk-circle5.sk-circle
      .sk-circle6.sk-circle
      .sk-circle7.sk-circle
      .sk-circle8.sk-circle
      .sk-circle9.sk-circle
      .sk-circle10.sk-circle
      .sk-circle11.sk-circle
      .sk-circle12.sk-circle

  = render 'shared/navpanel'

  %section#main
    .container
      .row
        .col-md-12.col-sm-12
          %h3 КОТТЕДЖНЫЙ ПОСЕЛОК
          %h1 ДЕРЕВЕНЬКА
          %hr
            %a.smoothScroll.btn.btn-danger{href: '#work'} Подробнее
            %a.smoothScroll.btn.btn-default{href: '#contact'} Связаться с нами

  = render 'work'
  = render 'about'
  = render 'portfolio'
  = render 'map'
  = render 'team'
  = render 'contacts'
  //= render 'footer'



:javascript
  jQuery(document).ready(function() {
    $('#main').backstretch([
       "#{image_url('bg_1.jpg')}",
       "#{image_url('bg_2.jpg')}"
        ],  {duration: 2000, fade: 750});
    });
