  function init() {
    var myMap = new ymaps.Map('yandex-map', {
      center: [61.284340, 46.598892],
      zoom: 12
    }),
    myPolygon = new ymaps.Polygon([[
                    // Координаты вершин внешней границы многоугольника.
                    [ 61.2998, 46.5306 ],
                    [ 61.3000, 46.5307 ],
                    [ 61.3004, 46.5306 ],
