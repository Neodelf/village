                    [ 61.3047, 46.5337 ],
                    [ 61.3035, 46.5348 ],
                    [ 61.3023, 46.5352 ],
                    [ 61.2998, 46.5362 ],
                    [ 61.3000, 46.5351 ],
                    [ 61.3001, 46.5339 ],
                    [ 61.3000, 46.5329 ],
                    [ 61.3000, 46.5321 ],
                    [ 61.2998, 46.5306 ]
                ]], {
                    //Свойства
                    hintContent: "Коттеджный поселок 'Деревенька'"
                }, {
                    // Опции.
                    // Цвет заливки (красный)
                    fillColor: '#FF0000',
                    // Цвет границ (синий)
                    strokeColor: '#0000FF',
                    // Прозрачность (полупрозрачная заливка)
                    opacity: 0.6,
                    // Ширина линии
                    strokeWidth: 2,
                    // Стиль линии
                    strokeStyle: 'solid'
                });

            myMap.controls.add("zoomControl");
            myMap.geoObjects
                .add(myPolygon);
  };
