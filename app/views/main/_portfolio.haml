%section#portfolio
  .container
    .row
      .col-md-12.col-sm-12
        .section-title
          %strong Реализованные объекты
          %h2.heading.bold Различного вида сложности
          %hr
        .iso-section
          .iso-box-section.wow.fadeIn{'data-wow-delay' => '0.9s'}
            .iso-box-wrapper.col4-iso-box
              - @buildings.each_with_index do |b, i|
                .iso-box.html.wordpress.mobile.col-lg-4.col-md-4.col-sm-6{class: "#{ 'toggle_part' if i > 5 }"}
                  = link_to building_path(b), class: 'ajax-popup-link', remote: true do
                    = image_tag b.images.first.file_data.url(:gallery)
                - if i == @buildings_size
                  .row.toggle_button
                    Развернуть все
